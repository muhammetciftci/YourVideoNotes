<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="30dp"
    android:layout_margin="10dp"
    android:background="#03A9F4"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">




            <TextView
                android:id="@+id/video_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Title" />


            <TextView
                android:id="@+id/video_explanation_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="explanation" />


            <TextView
                android:id="@+id/video_date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="bold|italic"
                android:layout_weight="1"
                android:text="Date:" />
        </LinearLayout>


        <ImageView
            android:id="@+id/play_video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/green_desing"
            android:src="@drawable/ic_baseline_smart_display_24" />

        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/red_desing"
            android:src="@drawable/ic_baseline_delete_24" />

        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/blue_desing"
            android:src="@drawable/ic_sharp_edit_24" />



    </LinearLayout>




</LinearLayout>